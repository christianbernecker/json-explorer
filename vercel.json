{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "^/$", "status": 307, "headers": { "Location": "/json-explorer" } },
    { "src": "/404", "dest": "/404.html" },
    { "src": "/legal/imprint", "dest": "/legal/imprint.html" },
    { "src": "/legal/privacy", "dest": "/legal/privacy.html" },
    { "src": "/contact", "dest": "/contact.html" },
    { "handle": "filesystem" },
    { 
      "src": "/json-explorer", 
      "dest": "/", 
      "headers": { 
        "Cache-Control": "public, max-age=300, s-maxage=600, stale-while-revalidate=86400",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Referrer-Policy": "strict-origin-when-cross-origin"
      } 
    },
    { 
      "src": "/json-explorer/legal/imprint", 
      "dest": "/legal/imprint.html",
      "headers": { 
        "Cache-Control": "public, max-age=86400, s-maxage=604800",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    { 
      "src": "/json-explorer/legal/privacy", 
      "dest": "/legal/privacy.html",
      "headers": { 
        "Cache-Control": "public, max-age=86400, s-maxage=604800",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    { 
      "src": "/json-explorer/contact", 
      "dest": "/contact.html",
      "headers": { 
        "Cache-Control": "public, max-age=86400, s-maxage=604800",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    },
    { 
      "src": "/json-explorer/(.*)", 
      "dest": "/$1", 
      "headers": { 
        "Cache-Control": "public, max-age=300, s-maxage=600, stale-while-revalidate=86400",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Referrer-Policy": "strict-origin-when-cross-origin"
      } 
    },
    { 
      "src": "/(.*)\\.(?:js|css)$", 
      "headers": { 
        "Cache-Control": "public, max-age=31536000, immutable",
        "Content-Encoding": "br, gzip",
        "X-Content-Type-Options": "nosniff"
      },
      "continue": true
    },
    { 
      "src": "/(.*)\\.(?:png|jpg|gif|svg|ico|woff2|woff)$", 
      "headers": { 
        "Cache-Control": "public, max-age=31536000, immutable" 
      },
      "continue": true
    },
    { 
      "src": "/(.*)\\.xml$", 
      "dest": "/$1.xml",
      "headers": { 
        "Content-Type": "application/xml; charset=utf-8",
        "Cache-Control": "public, max-age=3600, s-maxage=86400"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html",
      "headers": { 
        "Cache-Control": "public, max-age=300, s-maxage=600, stale-while-revalidate=86400",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block",
        "Referrer-Policy": "strict-origin-when-cross-origin"
      }
    }
  ]
} 