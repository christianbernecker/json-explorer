{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "^/$", "status": 307, "headers": { "Location": "/json-explorer" } },
    { "handle": "filesystem" },
    { "src": "/json-explorer", "dest": "/", "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" } },
    { "src": "/json-explorer/(.*)", "dest": "/$1", "headers": { "Cache-Control": "no-cache, no-store, must-revalidate" } },
    { 
      "src": "/(.*)\\.(?:js|css|png|jpg|gif|svg|ico)$", 
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html",
      "headers": { 
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    }
  ]
} 